                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="lblCmd" HorizontalAlignment="Left" Text="Combat Maneuver Defense (CMD)" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <TextBox x:Name="txtCmd" HorizontalAlignment="Center" IsReadOnly="True" MinHeight="23" VerticalAlignment="Center" MinWidth="80" Grid.Column="1" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                        <local:DetailsButton x:Name="btnCmdDetails" Grid.Column="2" Margin="10,0" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" />

                        <Grid Grid.Row="1" Grid.ColumnSpan="5" Margin="0,3,0,0" Visibility="{Binding ElementName=btnCmdDetails, Path=IsSelected, Converter={StaticResource btv}}" >
                            <StackPanel Orientation="Horizontal" Margin="3">
                                <TextBlock Text="STRm" VerticalAlignment="Center" />
                                <TextBox IsReadOnly="True" Margin="5,0" MinWidth="60" MinHeight="23" Text="{Binding ElementName=txtStrm, Path=Text}" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                                <TextBlock Text="AGIm" VerticalAlignment="Center" />
                                <TextBox IsReadOnly="True" Margin="5,0" MinWidth="60" MinHeight="23" Text="{Binding ElementName=txtAgim, Path=Text}" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                                <TextBlock Text="Pr" VerticalAlignment="Center" Margin="3,0,0,0" />
                                <TextBox IsReadOnly="True" Margin="5,0" MinWidth="60" MinHeight="23" Text="{Binding ElementName=txtProwess, Path=Text}" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                                <TextBlock Text="Misc" VerticalAlignment="Center" Margin="3,0,0,0" />
                                <flat:IntegerSpinner x:Name="txtCmdM" Margin="5,0" MinWidth="60" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" ValueChanged="CombatTabValueChanged" />
                                <!--MaxValue="{Binding ElementName=nudEcl, Path=Value}"-->
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15,10,0,10" Grid.Row="9" VerticalAlignment="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="lblMmb" HorizontalAlignment="Left" Text="Mystic Maneuver Bonus (MMB)" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <TextBox x:Name="txtMmb" HorizontalAlignment="Center" IsReadOnly="True" MinHeight="23" VerticalAlignment="Center" MinWidth="80" Grid.Column="1" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                        <local:DetailsButton x:Name="btnMmbDetails" Grid.Column="2" Margin="10,0" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" />

                        <Grid Grid.Row="1" Grid.ColumnSpan="5" Margin="0,3,0,0" Visibility="{Binding ElementName=btnMmbDetails, Path=IsSelected, Converter={StaticResource btv}}" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Margin="3">
                                <TextBlock Text="PWRm" VerticalAlignment="Center" />
                                <TextBox x:Name="txtMmbPwrm" IsReadOnly="True" Margin="5,0" MinWidth="60" MinHeight="23" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                                <TextBlock Text="Pr" VerticalAlignment="Center" Margin="3,0,0,0" />
                                <TextBox IsReadOnly="True" Margin="5,0" MinWidth="60" MinHeight="23" Text="{Binding ElementName=txtProwess, Path=Text}" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                                <TextBlock Text="Misc" VerticalAlignment="Center" Margin="3,0,0,0" />
                                <flat:IntegerSpinner x:Name="txtMmbM" Margin="5,0" MinWidth="60" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" ValueChanged="CombatTabValueChanged" />
                                <!--MaxValue="{Binding ElementName=nudEcl, Path=Value}"-->
                            </StackPanel>
                            <TextBlock Margin="3,0" Grid.Row="1" x:Name="lblMmbPwrm" Text="(NAME) is your Power stat." />
                        </Grid>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15,10,0,10" Grid.Row="10" VerticalAlignment="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="lblMmd" HorizontalAlignment="Left" Text="Mystic Maneuver Defense (MMD)" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <TextBox x:Name="txtMmd" HorizontalAlignment="Center" IsReadOnly="True" MinHeight="23" VerticalAlignment="Center" MinWidth="80" Grid.Column="1" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                        <local:DetailsButton x:Name="btnMmdDetails" Grid.Column="2" Margin="10,0" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" />

                        <Grid Grid.Row="1" Grid.ColumnSpan="5" Margin="0,3,0,0" Visibility="{Binding ElementName=btnMmdDetails, Path=IsSelected, Converter={StaticResource btv}}" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Margin="3">
                                <TextBlock Text="PWRm" VerticalAlignment="Center" />
                                <TextBox x:Name="txtMmdPwrm" IsReadOnly="True" Margin="5,0" MinWidth="60" MinHeight="23" Text="{Binding ElementName=txtStrm, Path=Text}" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                                <TextBlock Text="Pr" VerticalAlignment="Center" Margin="3,0,0,0" />
                                <TextBox IsReadOnly="True" Margin="5,0" MinWidth="60" MinHeight="23" Text="{Binding ElementName=txtProwess, Path=Text}" Background="{Binding ElementName=window, Path=ColorScheme.SecondHighlightColor, Converter={StaticResource ctb}}" />
                                <TextBlock Text="Misc" VerticalAlignment="Center" Margin="3,0,0,0" />
                                <flat:IntegerSpinner x:Name="txtMmdM" Margin="5,0" MinWidth="60" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" ValueChanged="CombatTabValueChanged" />
                                <!--MaxValue="{Binding ElementName=nudEcl, Path=Value}"-->
                            </StackPanel>
                            <TextBlock Margin="3,0" Grid.Row="1" x:Name="lblMmdPwrm" Text="(NAME) is your Power stat." />
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Margin="5,5,5,0" x:Name="grdAttributes" Visibility="Collapsed" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="25" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="titAttributes" Text="Attributes/Defects" FontSize="16" />
                    </Grid>
                    <TextBlock x:Name="lblTotals" HorizontalAlignment="Left" Margin="15,12,0,0" Grid.Row="1" Text="Character Points" FontWeight="SemiBold" VerticalAlignment="Top"/>

                    <TextBlock x:Name="lblAttributes" HorizontalAlignment="Left" Margin="15,12,0,0" Grid.Row="3" Text="Attributes" FontWeight="SemiBold" VerticalAlignment="Top"/>
                    <Expander VerticalAlignment="Center" Margin="120,0,0,0" HorizontalAlignment="Left" Grid.Row="3" x:Name="expAttributes" Header="Show/Hide List" IsExpanded="True" Foreground="{Binding Foreground, ElementName=window}" />
                    <flat:FlatButton ColorScheme="{Binding ColorScheme, ElementName=window}" Width="20" Height="24" HorizontalAlignment="Right" Margin="0,0,50,0" Grid.Row="3" Padding="0" TransparentBack="True" ToolTip="Add" x:Name="btnAddAttribute" >
                        <local:ThemedImage ImageName="Add" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:FlatButton ColorScheme="{Binding ColorScheme, ElementName=window}" Width="20" Height="24" HorizontalAlignment="Right" Margin="0,0,28,0" Grid.Row="3" Padding="0" TransparentBack="True" ToolTip="Delete" x:Name="btnDeleteAttribute" >
                        <local:ThemedImage ImageName="Cancel" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:FlatButton ColorScheme="{Binding ColorScheme, ElementName=window}" Width="20" Height="24" HorizontalAlignment="Right" Margin="0,0,6,0" Grid.Row="3" Padding="0" TransparentBack="True" ToolTip="Deselect All" x:Name="btnDeselectAttribute" >
                        <local:ThemedImage ImageName="Deselect" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:SelectPanel ColorScheme="{Binding ColorScheme, ElementName=window}" x:Name="selAbilities" PanelBorderThickness="1" UseLighterBorder="True" MinHeight="3" Grid.Row="4" MultiSelect="True" />

                    <TextBlock x:Name="lblDefects" HorizontalAlignment="Left" Margin="15,12,0,0" Grid.Row="5" Text="Defects" FontWeight="SemiBold" VerticalAlignment="Top"/>
                    <Expander VerticalAlignment="Center" Margin="120,0,0,0" HorizontalAlignment="Left" Grid.Row="5" x:Name="expDefects" Header="Show/Hide List" IsExpanded="True" Foreground="{Binding Foreground, ElementName=window}" />
                    <flat:FlatButton ColorScheme="{Binding ColorScheme, ElementName=window}" Width="20" Height="24" HorizontalAlignment="Right" Margin="0,0,50,0" Grid.Row="5" Padding="0" TransparentBack="True" ToolTip="Add" x:Name="btnAddDefect" >
                        <local:ThemedImage ImageName="Add" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:FlatButton ColorScheme="{Binding ColorScheme, ElementName=window}" Width="20" Height="24" HorizontalAlignment="Right" Margin="0,0,28,0" Grid.Row="5" Padding="0" TransparentBack="True" ToolTip="Delete" x:Name="btnDeleteDefect" >
                        <local:ThemedImage ImageName="Cancel" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:FlatButton ColorScheme="{Binding ColorScheme, ElementName=window}" Width="20" Height="24" HorizontalAlignment="Right" Margin="0,0,6,0" Grid.Row="5" Padding="0" TransparentBack="True" ToolTip="Deselect All" x:Name="btnDeselectDefect" >
                        <local:ThemedImage ImageName="Deselect" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" Width="16" Height="16" />
                    </flat:FlatButton>
                    <flat:SelectPanel ColorScheme="{Binding ColorScheme, ElementName=window}" x:Name="selTraits" PanelBorderThickness="1" UseLighterBorder="True" MinHeight="3" Grid.Row="6" MultiSelect="True" />
                </Grid>
                <Grid Margin="5,5,5,0" x:Name="grdFeats">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="25" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="titFeats" Text="Feats" FontSize="16" />
                    </Grid>
                    <ild:ItemListDisplay x:Name="selFeats" Grid.Row="2" Title="Feats" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" BorderThickness="1"
                                         SheetClassType="{x:Type local:Feat}" DisplayElementType="{x:Type local:FeatEditor}" />
                </Grid>
                <Grid Margin="5,5,5,0" x:Name="grdNotes" Visibility="Collapsed" >
                    <TextBlock x:Name="titNotes" Text="Notes" FontSize="16" Margin="10,0,0,0" VerticalAlignment="Top" />
                    <TextBox x:Name="txtNotes" AcceptsReturn="True" MinHeight="200" Height="Auto" Margin="10,60,10,25" TextWrapping="Wrap" SpellCheck.IsEnabled="True" TextChanged="txtNotes_TextChanged"/>
                    <md:MarkdownViewer x:Name="vwrNotes" MinHeight="200" Height="Auto" Margin="10,60,10,25" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                    <flat:CheckBox x:Name="chkNotesMarkdown" HorizontalAlignment="Right" Margin="0,30,10,0" VerticalAlignment="Top" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" CheckChanged="chkNotesMarkdown_CheckChanged">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Enable Markdown" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <Image Source="/Images/markdown.png" Height="16" />
                        </StackPanel>
                    </flat:CheckBox>
                    <flat:FlatButton x:Name="btnNotesView" Content="View" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="60" Click="btnNotesView_Click"
                                     BorderThickness="0,0,0,1" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" BorderSelectionThickness="1,1,1,0" Height="30" />
                    <flat:FlatButton x:Name="btnNotesEdit" Content="Edit" HorizontalAlignment="Left" Margin="70,30,0,0" VerticalAlignment="Top" Width="60" Click="btnNotesEdit_Click"
                                     BorderThickness="0,0,0,1" ColorScheme="{Binding ElementName=window, Path=ColorScheme}" BorderSelectionThickness="1,1,1,0" Height="30" />
                    <Border BorderThickness="1" Margin="130,59,10,0" Height="1" VerticalAlignment="Top" BorderBrush="{Binding ElementName=window, Path=BorderBrush}" x:Name="brdrNotesMarkdown" />
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <edit:TextEditor Grid.Row="2" Grid.Column="1" FontFamily="Consolas" FontSize="12" x:Name="txtEditRaw" ShowLineNumbers="True" WordWrap="True" Visibility="Collapsed" TextChanged="txtEditRaw_TextChanged" AllowDrop="True" Drop="txtEditRaw_Drop" Background="White" Foreground="Black" >
            <edit:TextEditor.ContextMenu>
                <flat:ContextMenu FontFamily="Segoe UI">
                    <MenuItem Header="_Copy" Click="mnuCopy_Click">
                        <MenuItem.Icon>
                            <Image Source="/SentinelsJson;component/Images/Color/Copy.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="C_ut" Click="mnuCut_Click" >
                        <MenuItem.Icon>
                            <Image Source="/SentinelsJson;component/Images/Color/Cut.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Paste" Click="mnuPaste_Click" />
                    <Separator />
                    <MenuItem Header="_Select All" Click="mnuSelectAll_Click" >
                        <MenuItem.Icon>
                            <Image Source="/SentinelsJson;component/Images/Color/SelectText.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Delete" Click="mnuDelete_Click" >
                        <MenuItem.Icon>
                            <Image Source="/SentinelsJson;component/Images/Color/Cancel.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </flat:ContextMenu>
            </edit:TextEditor.ContextMenu>
        </edit:TextEditor>

        <Grid x:Name="grdEditDrop" Grid.Row="2" Grid.Column="1" Background="#01000000" Visibility="Collapsed" AllowDrop="True" Drop="txtEditRaw_Drop" />

        <TextBlock x:Name="lblNoSheet" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Visibility="Collapsed" AllowDrop="True" Drop="txtEditRaw_Drop" >
            <Run Text="No sheet loaded" /><LineBreak /><Run FontSize="4" /><LineBreak/>
            <Run Text="Drop a file here, or use the File menu to create or open a sheet."  />
        </TextBlock>

    </Grid>
</flat:FlatWindow>
